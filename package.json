{
  "name": "valienv",
  "version": "0.2.1",
  "license": "MIT",
  "description": "A simple environment variables validator for Node.js and web browsers.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/validatenv#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/validatenv.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "validation",
    "validator",
    "typescript"
  ],
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*.{js,md,ts,tsx}' --write",
    "lint": "eslint --ext ts,tsx __tests__ src",
    "test": "jest",
    "test:watch": "jest --watch",
    "tscheck": "tsc --noEmit",
    "prepare": "yarn lint && yarn test && yarn build"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^28.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-jest": "^28.1.1",
    "eslint": "^8.17.0",
    "jest": "^28.1.1",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "typescript": "^4.7.3"
  }
}
